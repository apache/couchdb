<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <title>Project Fauxton</title>

  <!-- Application styles. -->
  <link rel="stylesheet" href="<%= assets_root %>css/index.css">
  <style type="text/css">
    body {
    padding-top: 60px;
    padding-bottom: 40px;
    }
  </style>
  <% if (base) { %>
  <base href="<%= base %>"></base>
  <% } %>
</head>

<body id="home">
  <!-- Main container. -->
  <div role="main" id="main">
    <div id="global-notifications" class="container errors-container"></div>
    <div id="app-container"></div>
    <hr>

    <footer>
      <div id="footer-content" class="container">
        <p>&copy; Project Fauxton 2012</p>
      </div>
    </footer>
  </div>

  <!-- Application source. -->
  <script data-main="/app/config" src="<%= assets_root %>js/<%= requirejs %>"></script>
</body>
</html>
