if [ -z $NODE ]; then
    if [ -z $1 ]; then
        NODE=1
    else
        NODE=$1
    fi
fi

if [ -z $HOST ]; then
    HOST="127.0.0.1"
fi

NAME="remsh$$@$HOST"
NODE="node$NODE@$HOST"
rootdir="$(cd "${0%/*}" 2>/dev/null; echo "$PWD")"
erl -name $NAME -remsh $NODE -hidden -proto_dist inet_tls -ssl_dist_optfile "${rootdir}/couch_ssl_dist.conf"
